<!-- File info dialog -->
<div id="FileInfoModal" class="modal hide fade" style="width:830px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>File info</h3>
  </div>
  <div class="modal-body">
    <label>Write here your local repository path</label>
    <input id="fileinfo-basepath" type="text" placeholder="Example: /opt/git" value="git">
    <br/>
    <label>Repository</label>
    <pre id="fileinfo-reponame"></pre>
    <label>Name</label>
    <pre id="fileinfo-name"></pre>
    <label>Path</label>
    <pre id="fileinfo-displaypath"></pre>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Ok</button>
  </div>
</div>