<!-- Share file dialog -->
<div id="shareFileModal" class="modal hide fade" style="width:600px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Share file</h3>
  </div>
  <div class="modal-body">
    <p>Copy this link and send to the person you want to share with:</p><br/>
    <p style="color:blue" id="shareLinkContainer"></p>
    <span style="color:#999">(Control+c) to copy the link</span>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Ok</button>
  </div>
</div>